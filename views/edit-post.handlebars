<article>
    <a href="/dashboard"> Back to dashboard</a>
    <h2> Edit Post </h2>
    <form>
        <div>
            <input name="post-title" type="text" value="{{post.title}}" />
        </div>
        <div>
            <textarea name="post-textarea">{{post.post_textarea}}</textarea>
        </div>
        <div>
            Created on {{format_date post.created_at}}
            |
            <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
        </div>

        <button type="submit" class="button" id="edit-post" > Save post</button>
        <button type="button" class="button" id="delete-post" > Delete post</button>
    </form>
</article>


id="edit-post"
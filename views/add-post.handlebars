<section>

    <h2 class="title">Add a new post</h2>

    <div class="post">

        <form>
            <div>
                <label for="post-title">Title:</label>
                <input type="text" id="post-title" name="post-title" placeholder="Insert the title" />
            </div>
            <div>
                <label for="post-textarea">Content:</label>
                <input class="textarea" id="post-textarea" name="post-textarea" placeholder="Insert the content" />
            </div>
            <button type="submit" class="button" id="new-post">Add a new post</button>
        </form>

    </div>


    <a href="/dashboard"> Back to the Dashboard</a>

</section>

<script src="/javascript/add-post.js"></script>